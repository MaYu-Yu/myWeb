<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="utf-8">
  <title>二股 - Home</title>
  <!-- CSS -->
  <link href="/css/font-awesome.min.css" rel="stylesheet">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/templatemo-style.css" rel="stylesheet">
  <!-- JS -->
  <script type="text/javascript" src="js/jquery-1.11.2.min.js"></script> <!-- jQuery -->
  <script type="text/javascript" src="js/bootstrap-filestyle.min.js"></script>
  <script type="text/javascript" src="js/templatemo-script.js"></script> <!-- Templatemo Script -->
  <script src="/js/myJS.js"></script>
</head>

<body>
  <!-- Left nav -->
  <div class="templatemo-flex-row">
    <div class="templatemo-sidebar">
      <header class="templatemo-site-header">
        <h1><a href="/">一網維二股</a></h1>
      </header>
      <!-- Search box -->
      <form class="templatemo-search-form" role="search">
        <div class="input-group">
          <button type="submit" class="fa fa-search"></button>
          <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
        </div>
      </form>
      <div class="mobile-menu-icon">
        <i class="fa fa-bars"></i>
      </div>

      <nav class="templatemo-left-nav">
        <ul>
          <li><a href="/" class="active"><i class="fa fa-home fa-fw"></i>首頁</a></li>
          <li><a href="/article"><i class="fa fa-book fa-fw"></i>文章</a></li>
          <li><a href="/database"><i class="fa fa-database fa-fw"></i>資料庫</a></li>
        </ul>
      </nav>
    </div>
    <!-- Top nav -->
    <div class="templatemo-content col-1 light-gray-bg">
      <div class="templatemo-top-nav-container">
        <div class="row">
          <nav class="templatemo-top-nav col-lg-12 col-md-12">
            <ul class="text-uppercase">
              <li><a href="/" class="active">內容</a></li>
              <li><a href="/post_article"><i class="fa fa-sliders fa-fw"></i>發表文章</a></li>
              <li><a href="/add_database"><i class="fa fa-sliders fa-fw"></i>新增資料庫</a></li>
              <li><a href="/login"><i class="fa fa-eject fa-fw"></i>登入</a></li>
            </ul>
          </nav>
        </div>
      </div>

      <!-- context -->
      <div class="templatemo-content-container">
        <div class="templatemo-flex-row flex-content-row">

          <!-- 文章列表 -->
          <div class="templatemo-content-widget white-bg col-1">
            <i class="fa fa-times" onclick="hide(this.parentElement)"></i>
            <div class="media margin-bottom-30">
              <div class="media-body">
                <h2 class="media-heading text-uppercase blue-text">文章列表</h2>
              </div>
            </div>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <td>編號</td>
                    <td>標題</td>
                    <td>作者</td>
                    <td>建立時間</td>
                  </tr>
                </thead>
                <tbody>
                  <% articles.forEach(function(article) { %>
                    <tr>
                      <td>
                        <a href="/article/<%= article.id %>"><%= article.id %></a>
                      </td>
                      <td>
                        <%= article.title %>
                      </td>
                      <td>
                        <%= article.author %>
                      </td>
                      <td>
                        <%= article.created_at.toLocaleDateString('zh-CN') %>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>
          </div>

          <!-- 資料庫 -->
          <div class="templatemo-content-widget white-bg col-1">
            <i class="fa fa-times" onclick="hide(this.parentElement)"></i>
            <div class="media margin-bottom-30">
              <div class="media-body">
                <h2 class="media-heading text-uppercase blue-text">資料庫</h2>
              </div>
            </div>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <td>編號</td>
                    <td>資料庫名稱</td>
                  </tr>
                </thead>
                <tbody>
                  <% for (var i=0; i < tables.length; i++) { %>
                  <tr>
                    <td><a href="/database/<%= tables[i] %>"><%= i+1 %></a></td>
                    <td><%= tables[i] %></td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>


        </div>
      </div>

    </div>
  </div>
  <!-- bottom -->
  <footer class="text-right">
    <p>
      Designed By <a href="/">林宏勲</a>
      Phone : <a href="tel:0956168012">0956168012</a>
      eMail : <a href="mailto:cht_lin@cht.com.tw">cht_lin@cht.com.tw</a>
    </p>
  </footer>

  <script>

  </script>
</body>

</html>